<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GreetingActivity" >

   <!-- <TextView
        android:id="@+id/txtview_battery_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dip"
        android:fontFamily="Arial"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        />-->
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal" >
       <!-- android:layout_alignLeft="@+id/txtview_battery_status"
        android:layout_below="@+id/txtview_battery_status"-->
        <TextView
            android:id="@+id/txtview_battery_status"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:fontFamily="Arial"
            android:gravity="center_vertical"
            android:maxWidth="150dp"
            android:minWidth="150dp"
            android:text="Battery level "
            android:textColor="@color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtTxt_battery_level"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:fontFamily="Arial"
            android:hint="(1-99)"
            android:maxWidth="50dp"
            android:minWidth="50dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/push_button"
            android:maxWidth="75dp"
            android:minWidth="75dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="17dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:fontFamily="Arial"
            android:gravity="center_vertical"
            android:maxWidth="200dp"
            android:minWidth="200dp"
            android:text="Wifi/Data On/Off"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/switch_wifi_data"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@color/white"
            android:fontFamily="Arial"
            android:textSize="15sp"

            />
    </LinearLayout>
        <LinearLayout

            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="17dp"
            android:orientation="horizontal"
            android:maxWidth="200dp"
            android:minWidth="200dp"
            >
            <TextView
                android:id="@+id/switchStatus"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Location"
                android:textColor="@color/white"
                android:fontFamily="Arial"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:maxWidth="200dp"
                android:minWidth="200dp"

                />
            <Switch
                android:id="@+id/switch_location"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="@color/white"
                android:fontFamily="Arial"
                android:textSize="15sp"
                android:orientation="horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout3"
            android:layout_below="@+id/linearLayout3"
            android:layout_marginTop="17dp"
            android:orientation="horizontal"
            android:maxWidth="200dp"
            android:minWidth="200dp"


            >
            <TextView
                android:id="@+id/switchStatus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Airplane Mode"
                android:textColor="@color/white"
                android:fontFamily="Arial"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:maxWidth="200dp"
                android:minWidth="200dp"/>
            <Switch
                android:id="@+id/switch_airplane_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="Arial"
                android:textSize="15sp"

                />
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="17dp"
        android:orientation="horizontal"
        android:maxWidth="200dp"
        android:minWidth="200dp"
        >
        <TextView
            android:id="@+id/txtview_guardmsg"
            android:layout_marginTop="17dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="Arial"
            android:text="Gaurdian Name"

            />
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/greeting_default"
            android:id="@+id/greetimg"
            android:visibility="visible"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout6"
        android:layout_alignLeft="@+id/linearLayout5"
        android:layout_below="@+id/linearLayout5"
        android:layout_marginTop="17dp"
        android:maxWidth="200dp"
        android:minWidth="200dp"
        >
        <Button
            android:id="@+id/btn_qrcode_view"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="My QR ID"
            android:background="@drawable/bg_button_rounded"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="Arial" />
         <!--   android:background="@drawable/bg_button_rounded"-->

        <Button
            android:id="@+id/btn_qrcode_scan"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Scan Guardian QR"
            android:background="@drawable/bg_button_rounded"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="Arial"
            android:layout_marginLeft="50dp"/>



  </LinearLayout>

      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/bg_form_rounded"
          android:orientation="horizontal"
          android:id="@+id/linearLayout7"
          android:layout_alignLeft="@+id/linearLayout6"
          android:layout_below="@+id/linearLayout6"
          android:layout_marginTop="17dp"
          >
          <TextView
              android:id="@+id/greetingmsg"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center"
              android:text="@string/welcome"
              android:textColor="@color/black"
              android:textSize="20sp" />
      </LinearLayout>


</RelativeLayout><!-- From: file:/Users/optadmin/Documents/Opteamix/Android%20Projects/GCMGreetingApp/app/src/main/res/layout/activity_greeting.xml -->